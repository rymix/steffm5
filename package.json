{
  "name": "steffm5",
  "version": "1.0.0",
  "author": "Steve Arnott",
  "description": "STEF.FM - Funky House and Soul Music - Adventures in Decent Music",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build && node post-build.js",
    "start": "next start",
    "eslint": "node --no-warnings ./node_modules/.bin/eslint .",
    "eslint:fix": "node --no-warnings ./node_modules/.bin/eslint . --fix",
    "prettier": "prettier --write .",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "stylelint": "stylelint --formatter=verbose --fix '**/*.{ts,tsx}'",
    "test": "jest",
    "prepare": "husky"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "tests/**/*.+(test|spec).+(ts|tsx|js)",
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "hooks/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!**/*.test.{ts,tsx}",
      "!**/*.spec.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx"
          }
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^db$": "<rootDir>/db/index",
      "^db/(.*)$": "<rootDir>/db/$1",
      "^components/(.*)$": "<rootDir>/components/$1",
      "^hooks/(.*)$": "<rootDir>/hooks/$1",
      "^utils/(.*)$": "<rootDir>/utils/$1",
      "^styles/(.*)$": "<rootDir>/styles/$1",
      "^contexts/(.*)$": "<rootDir>/contexts/$1"
    }
  },
  "homepage": "https://github.com/rymix/steffm5.git",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rymix/steffm5.git"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/styled-components": "^5.1.34",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-testing-library": "^7.13.3",
    "eslint-plugin-unicorn": "^61.0.2",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^16.2.4",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^7.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2",
    "vite": "^7.1.10"
  },
  "keywords": [
    "react",
    "react-component",
    "player",
    "audio-player",
    "music-player",
    "mixcloud-player",
    "mixcloud-widget",
    "mixcloud",
    "typescript",
    "audio",
    "music",
    "streaming",
    "playlist"
  ],
  "dependencies": {
    "fuse.js": "^7.1.0",
    "lowdb": "^7.0.1",
    "next": "^15.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.19"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
